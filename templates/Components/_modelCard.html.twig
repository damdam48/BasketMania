<div>
	<div>
		<em>{{ model.name }}</em>
	</div>

	<div>
		<em>{{ model.slug }}</em>
	</div>

	<div>
		<em>{{ model.enable }}</em>
	</div>
	<div>
		<a href="{{ path('admin.model.update', {id: model.id }) }}" class="">Update</a>
	</div>
	<form method="POST" action="{{ path('admin.model.delete', {id: model.id}) }}" onsubmit="return confirm('Êtes-vous sùr de vouloir supprimer ( {{ model.name }} ) ?')">
		<input type="hidden" name="_method" value="DELETE">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ model.id) }}">
		<button class="">Supprimer</button>
	</form>
	<br>


</div>
